<prism:PrismApplication x:Class="TheDebtBook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TheDebtBook"
             xmlns:prism="http://prismlibrary.com/" >
    <Application.Resources>
        <SolidColorBrush x:Key="myBackground" Color="LightGray"/>
        <Style x:Key="bigButton">
            <Setter Property="ItemsControl.Height" Value="26"/>
            <Setter Property="ItemsControl.Width" Value="90"/>
            <Setter Property="ItemsControl.Background" Value="RosyBrown" />
        </Style>
        <Style x:Key="smallButton">
            <Setter Property="ItemsControl.Height" Value="26"/>
            <Setter Property="ItemsControl.Width" Value="60"/>
            <Setter Property="ItemsControl.Margin" Value="10"/>
            <Setter Property="ItemsControl.Background" Value="RosyBrown" />
        </Style>
    </Application.Resources>
</prism:PrismApplication>
